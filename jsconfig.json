{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "checkJs": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*"
  ],
  "paths": {
    "assets/*": ["src/assets/*"],
    "components/*": ["src/midgard/components/*"],
    "hooks/*": ["src/midgard/hooks/*"],
    "layout/*": ["src/midgard/layout/*"],
    "midgard/*": ["src/midgard/*"],
    "modules/*": ["src/midgard/modules/*"],
    "pages/*": ["src/midgard/pages/*"],
    "routes/*": ["src/midgard/routes/*"],
    "styles/*": ["src/styles/*"],
    "utils/*": ["src/midgard/utils/*"],
    "environment": ["environment.js"]
  },
  "exclude": ["node_modules"],
}
